{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "./docker-make.sh",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Build & Run in Regen",
            "type": "shell",
            "command": "./docker-make.sh && ./run-regen.sh bin/out.bin",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "Build & Run on Mega Drive",
            "type": "shell",
            "command": "./docker-make.sh && ./run-everdrive.sh bin/out.bin",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
